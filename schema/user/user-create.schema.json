{
  "$async": true,
  "type": "object",
  "additionalProperties": true,
  "required": [
    "name",
    "email",
    "mobile_no",
    "password",
    "delivery_charge",
    "delivery_day"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "store_name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "pattern": "^(([^<>()\\[\\]\\.,;:\\s@\\\"]+(\\.[^<>()\\[\\]\\.,;:\\s@\\\"]+)*)|(\\\".+\\\"))@(([^<>()[\\]\\.,;:\\s@\\\"]+\\.)+[^<>()[\\]\\.,;:\\s@\\\"]{2,})$"
    },
    "mobile_no": {
      "type": "string",
      "pattern": "^[0][1-9]\\d{9}$|^[1-9]\\d{9}$"
    },
    "alternate_no": {
      "type": "string",
      "pattern": "^[0][1-9]\\d{9}$|^[1-9]\\d{9}$"
    },
    "password": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "pincode": {
      "type": "string"
    },
    "delivery_charge": {
      "type": "number"
    },
    "delivery_day": {
      "type": "string",
      "enum": [
        "monday",
        "tuesday",
        "wednesday",
        "thursday",
        "friday",
        "saturday",
        "sunday"
      ]
    }
  }
}
